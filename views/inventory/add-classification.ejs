<h1 class="h1"><%- title %></h1>
<%- messages() %>

<div>
  <form
    action="/inv/add-classification"
    method="post"
    id="add-classification-form"
  >
    <label for="classification_name" class="classification_name"
      >Classification Name:</label
    >
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      required
      pattern="^[a-zA-Z0-9]+$"
      title="Classification name cannot contain spaces or special characters."
    />
    <button type="submit">Add Classification</button>
  </form>
</div>
