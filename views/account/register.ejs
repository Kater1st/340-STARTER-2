<h1 class="h1"><%= title %></h1>
<%- messages() %>

<form action="/account/register" method="post" class="form pb15">
  <label class="input-line">
    <span class="bold">First name</span>
    <input type="text" name="account_firstname" required />
  </label>
  <label class="input-line">
    <span class="bold">Last name</span>
    <input type="text" name="account_lastname" required />
  </label>
  <label class="input-line">
    <span class="bold">Email</span>
    <input type="email" name="account_email" required />
  </label>
  <label class="input-line">
    <span class="bold" required>Password</span>
    <span
      >Password must be at least 12 characters and contain at least 1 number, 1
      capital letter and 1 special character</span
    >
    <input
      type="password"
      name="account_password"
      id="accountPassword"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    />
  </label>
  <label class="input-line">
    <input
      class="form-submit-button"
      type="submit"
      name="submit"
      id="regbtn"
      value="Register"
    />
  </label>
</form>
